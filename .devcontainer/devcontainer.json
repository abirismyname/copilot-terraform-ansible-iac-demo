{
    "name":  "spring-boot-app",
    "image": "mcr.microsoft.com/devcontainers/universal:2",

    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "vsls-contrib.codetour",
                "GitHub.copilot",
                "tfsec.tfsec"
              ]
        },
        "codespaces": {
            "openFiles": [
              "main.tf",
              "provider.tf",
              "variables.tf"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers-contrib/features/terraform-asdf:2": {},
        "ghcr.io/dhoeric/features/tfsec:1": {}
      },
    "postCreateCommand": "/bin/chmod +x /workspaces/copilot-terraform-demo/.devcontainer/on-setup.sh && cd /workspaces/copilot-terraform-demo/ && .devcontainer/on-setup.sh"
}

