{
    "name":  "copilot-terraform-demo",
    "image": "mcr.microsoft.com/devcontainers/universal:2",

    "customizations": {
        "vscode": {
            "extensions": [
                "hashicorp.terraform",
                "vsls-contrib.codetour",
                "GitHub.copilot",
                "tfsec.tfsec"
              ]
        },
        "codespaces": {
            "openFiles": [
              "main.tf",
              "provider.tf",
              "variables.tf"
            ]
        }
    },
    "hostRequirements": {
      "cpus": 8,
      "memory": "8gb",
      "storage": "32gb"
   },
    "features": {
        "ghcr.io/devcontainers-contrib/features/terraform-asdf:2": {},
        "ghcr.io/dhoeric/features/tfsec:1": {}
      }
}

